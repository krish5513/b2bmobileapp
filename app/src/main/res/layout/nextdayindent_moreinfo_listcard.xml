<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nextdayindent_moreinfo_datevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02/05/2018"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/greydark"
            android:textSize="12sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/nextdayindent_moreinfo_milkvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200.000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/greydark"
            android:textSize="12sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/nextdayindent_moreinfo_curdvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/greydark"
            android:textSize="12sp"
            android:layout_weight="0.1"/>
        <TextView
            android:id="@+id/nextdayindent_moreinfo_othervalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="600"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/greydark"
            android:textSize="12sp"
            android:layout_weight="0.1"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />


</LinearLayout>