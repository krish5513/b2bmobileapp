<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rightclickit.b2bsaleon.activities.DashboardDeliveryPreview">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/layout_background">
        <TextView
            android:id="@+id/tv_companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="thirumala milk products pvt ltd"
            android:gravity="left"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/greydark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tin_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="29567129023"
                android:gravity="left"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:id="@+id/sales_ofc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Sales Office"
                android:gravity="left"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:id="@+id/route_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Route"
                android:gravity="left"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Order info"
            android:gravity="left"
            android:textAllCaps="true"
            android:padding="10dp"
            android:textColor="@color/greydark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="122541"
                android:gravity="left"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Date"
                android:gravity="left"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:id="@+id/user_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="login User name "
                android:gravity="left"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@color/layout_background"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:text="Product"
                android:textSize="14sp"
                android:layout_marginRight="7dp"
                android:textColor="@color/greydark"
                android:id="@+id/productName1" />



            <TextView
                android:id="@+id/productQt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_weight="0.17"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/greydark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:text="Tax"
                android:id="@+id/vat1"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="@color/greydark"/>
            <TextView
                android:id="@+id/productSP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="SP"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="end|center"
                android:gravity="center|end"
                android:textColor="@color/greydark"/>
            <TextView
                android:id="@+id/amount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Amount"
                android:layout_gravity="end|center"
                android:gravity="center|end"
                android:textSize="14sp"
                android:textColor="@color/greydark"/>
        </LinearLayout>

















        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:text="Fcm 500"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginRight="7dp"
                android:textColor="@color/greydark"
                android:id="@+id/productName" />



            <TextView
                android:id="@+id/productQt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.000"
                android:layout_weight="0.17"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/greydark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:text="0.00"
                android:id="@+id/vat"
                android:layout_gravity="end|center"
                android:gravity="end|center"
                android:textSize="12sp"
                android:textColor="@color/greydark"/>
            <TextView
                android:id="@+id/productSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="0.00"
                android:textSize="12sp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="end|center"
                android:gravity="center|end"
                android:textColor="@color/greydark"/>
            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="0.00"
                android:layout_gravity="end|center"
                android:gravity="center|end"
                android:textSize="12sp"
                android:textColor="@color/greydark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="One Time"
                android:textSize="12sp"
                android:layout_marginRight="7dp"
                android:textColor="@color/greydark"
                android:id="@+id/spinnerType" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="From: "
                android:textSize="12sp"
                android:layout_marginRight="7dp"
                android:textColor="@color/greydark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="00/00/00"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginRight="7dp"
                android:textColor="@color/greydark"
                android:id="@+id/fromDate" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="To :"
                android:textSize="12sp"
                android:layout_marginRight="7dp"
                android:textColor="@color/greydark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="00/00/00"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/greydark"
                android:id="@+id/toDate" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line" />
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollViewSearch"
                android:scrollbars="none"
                android:layout_marginBottom="105dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardList"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </ScrollView>

        </LinearLayout>
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="end|center"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sub Total"
                        android:textSize="14sp"
                        android:layout_weight="0.2"
                        android:textColor="@color/greydark"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_weight="0.17"
                        android:id="@+id/totalQty"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:textSize="14sp"
                        android:textColor="@color/greydark"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:layout_weight="0.18"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:textSize="14sp"
                        android:id="@+id/totalTaxAmount"
                        android:textColor="@color/greydark"/>
                    <TextView
                        android:id="@+id/subTotalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textSize="14sp"
                        android:layout_weight="0.175"
                        android:textColor="@color/black"
                        android:text="Rs. 0.00"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Value"
                        android:textSize="14sp"
                        android:textColor="@color/greydark"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:textSize="14sp"
                        android:id="@+id/totalAmount"
                        android:textColor="@color/black"
                        android:text="Rs. 0.00"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="end|center"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/print_green"
                    android:text="Print"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
