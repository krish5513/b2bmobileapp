<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    android:id="@+id/ll_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/tripslistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_gravity="top"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/route_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10052"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Truck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Truck Qty"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/greydark"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/TruckQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500.00"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CB"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/greydark"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20.00"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="1dp"
                        android:id="@+id/viewline1"
                        android:layout_height="8dp"
                        android:layout_marginLeft="7dp"
                        android:background="#dbd7d7" />
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_circle_orange"
                        android:src="@drawable/ic_arrow_downward_white_24dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:background="#dbd7d7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.5">
                                <TextView
                                    android:id="@+id/p_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="Product Name "
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/p_uom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(UOM)"
                                    android:textColor="@color/greydark"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.6">
                                <TextView
                                    android:id="@+id/tv_address2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Delivery"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/delivery_qty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="480.000"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.6"
                                android:id="@+id/ReturnQuantityLayout">
                                <TextView
                                    android:id="@+id/tv_address28"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Return"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/return_quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="580.000"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.4">

                                <TextView
                                    android:id="@+id/tv_address2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Route Rtn"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/route_return_dec"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_remove_circle_black_24dp" />

                                        <EditText
                                            android:id="@+id/route_return_quantity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.90"
                                            android:gravity="center"
                                            android:inputType="numberDecimal"
                                            android:longClickable="false"
                                            android:text="0000.000"
                                            android:textColor="@color/greydark"
                                            android:textSize="12sp" />

                                        <ImageButton
                                            android:id="@+id/route_return_inc"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_add_circle_black_24dp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:id="@+id/LeakOtherLayout">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.5">
                                <TextView
                                    android:id="@+id/tv_address3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Leak "
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:gravity="center"

                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/leak_dec"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_remove_circle_black_24dp" />

                                        <EditText
                                            android:id="@+id/leak_quantity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.90"
                                            android:gravity="center"
                                            android:inputType="numberDecimal"
                                            android:longClickable="false"
                                            android:text="0000.000"
                                            android:textColor="@color/greydark"
                                            android:textSize="12sp" />

                                        <ImageButton
                                            android:id="@+id/leak_inc"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_add_circle_black_24dp" />
                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.5">
                                <TextView
                                    android:id="@+id/tv_address3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Others "
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/others_dec"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_remove_circle_black_24dp" />

                                        <EditText
                                            android:id="@+id/others_quantity"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.90"
                                            android:gravity="center"
                                            android:inputType="numberDecimal"
                                            android:longClickable="false"
                                            android:text="0000.000"
                                            android:textColor="@color/greydark"
                                            android:textSize="12sp" />

                                        <ImageButton
                                            android:id="@+id/others_inc"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:background="@drawable/ic_add_circle_black_24dp" />
                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0.25"
                    android:layout_marginLeft="-5dp"
                    android:background="#dbd7d7" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>