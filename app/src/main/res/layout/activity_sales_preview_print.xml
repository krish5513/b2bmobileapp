    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tdc_sales_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Company name"
            android:textAllCaps="true"
            android:textColor="@color/greydark"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tdc_sales_route_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="routecode"
                android:textAllCaps="true"
                android:textColor="@color/greydark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tdc_sales_ofc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Sales Office"
                android:textAllCaps="true"
                android:textColor="@color/greydark"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tdc_sales_route_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Routename"
                android:textAllCaps="true"
                android:textColor="@color/greydark"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="Bill "
                android:textAllCaps="true"
                android:textColor="@color/greydark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tdc_sales_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:text="login User name "
                android:textAllCaps="true"
                android:textColor="@color/greydark"
                android:textSize="14sp" />

        </LinearLayout>

