<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context="com.rightclickit.b2bsaleon.activities.TripSheetViewPreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tdc_sales_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Company name"
                android:textAllCaps="true"
                android:textColor="@color/greydark"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tdc_sales_route_code"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="routecode"
                    android:textAllCaps="true"
                    android:textColor="@color/greydark"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/tdc_sales_route_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Routename"

                    android:textAllCaps="true"
                    android:textColor="@color/greydark"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Summary"
                    android:textAllCaps="true"
                    android:textColor="@color/greydark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tdc_sales_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    android:text="login User name "
                    android:textAllCaps="true"
                    android:textColor="@color/greydark"
                    android:textSize="14sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tripsheet_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Tripsheet No"
                    android:textAllCaps="true"
                    android:textColor="@color/greydark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tdc_sales_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="28/06/2017"
                    android:textAllCaps="true"
                    android:textColor="@color/greydark"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Summary"
            android:gravity="left"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textColor="@color/greydark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="OB"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="ORDER"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Received"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Due"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="1163692.00"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="46385.60"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="24275.00"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="1185803.52"
                    android:gravity="left"
                    android:layout_weight="0.25"
                    android:paddingLeft="10dp"
                    android:textColor="@color/greydark"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Agents/Customers"
            android:gravity="left"
            android:padding="5dp"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textColor="@color/greydark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Name"
                android:gravity="left"
                android:layout_weight="0.25"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="OB"
                android:gravity="left"
                android:layout_weight="0.25"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="ORDER"
                android:gravity="left"
                android:layout_weight="0.25"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Received"
                android:gravity="left"
                android:layout_weight="0.23"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Due"
                android:gravity="left"
                android:layout_weight="0.27"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:textColor="@color/greydark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/tdc_sales_products_list_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="end|center"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/print_green"
                    android:text="@string/print_btm"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>