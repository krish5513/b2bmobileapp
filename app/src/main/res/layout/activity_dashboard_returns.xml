        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_circle_red"
                        android:src="@drawable/ic_arrow_downward_white_24dp" />


                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:text="fcm 500"
                        android:textColor="@color/greydark"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.18"
                        android:gravity="end"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/to_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintAnimationEnabled="false">

                            <EditText
                                android:id="@+id/to_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hint="D. QTY"
                                android:longClickable="false"
                                android:textColor="@color/greydark"
                                android:textSize="10sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Return Type"
                            android:textColor="@color/darkgrey"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/spinner_type"
                            style="?android:attr/spinnerDropDownItemStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:textColor="@color/greydark" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="7dp"
                            android:background="@color/greydark" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/productQtDec"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_remove_circle_black_24dp" />

                        <EditText
                            android:id="@+id/productQt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:longClickable="false"
                            android:text="0000.000"
                            android:textColor="@color/greydark"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/productQtInc"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_add_circle_black_24dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />
        </LinearLayout>

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollViewSearch"
            android:layout_marginBottom="60dp"
            android:scrollbars="none">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cardList"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="end|center"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rsave"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/ts_dispatch_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/save_icon_green"
                    android:text="Save"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rpreview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_eye_green_24dp"
                    android:text="Preview"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/rdelivery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableTop="@drawable/delivery_green"
                    android:text="Delivery"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/rLinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_reply_orange_24dp"
                    android:text="@string/return_btm"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/rpayment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.25"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableTop="@drawable/payments_green"
                    android:text="Payment"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
