<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rightclickit.b2bsaleon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/favicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.rightclickit.b2bsaleon.activities.SplashScreenActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rightclickit.b2bsaleon.activities.LoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.rightclickit.b2bsaleon.activities.DashboardActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name="com.rightclickit.b2bsaleon.activities.SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.rightclickit.b2bsaleon.activities.NotificationsActivity"
            android:screenOrientation="portrait"></activity>

        <!-- Routes data sync service -->
        <service
            android:name="com.rightclickit.b2bsaleon.services.SyncRoutesMasterDetailsService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>